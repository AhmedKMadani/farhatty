    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.farhatty.user.Utiliti.ObservableStickyScrollView
        android:id="@+id/container_content"
        android:layout_width="match_parent"
