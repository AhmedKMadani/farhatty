<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardBackgroundColor="@color/global_bg_front"
	app:cardCornerRadius="@dimen/card_corner_radius"
	app:cardElevation="@dimen/elevation_card">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/global_spacing_xs"
			android:fontFamily="sans-serif-light"
		/>

		<View
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?attr/dividerHorizontal" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/global_spacing_xxs"
			android:paddingBottom="@dimen/global_spacing_xxs"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/fragment_poi_detail_info_intro"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_l"
				android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
				android:paddingRight="@dimen/global_spacing_xs"
				android:paddingTop="@dimen/global_spacing_xxs"
				android:paddingBottom="@dimen/global_spacing_xxs"
				android:gravity="right"
				android:drawableRight="@drawable/descp"
				android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
				android:textColor="@color/global_text_secondary"
				android:clickable="true"
				android:focusable="true" />

			<TextView
				android:id="@+id/fragment_poi_detail_info_address"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_l"
				android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
				android:paddingRight="@dimen/global_spacing_xs"
				android:paddingTop="@dimen/global_spacing_xxs"
				android:paddingBottom="@dimen/global_spacing_xxs"
				android:gravity="right"
				android:drawableRight="@drawable/location"
				android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"

				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true" />

			<TextView
				android:id="@+id/fragment_poi_detail_info_distance"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_l"
				android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
				android:paddingRight="@dimen/global_spacing_xs"
				android:paddingTop="@dimen/global_spacing_xxs"
				android:paddingBottom="@dimen/global_spacing_xxs"
				android:gravity="right"
				android:drawableRight="@drawable/distance"
				android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"
				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true" />

			<TextView
				android:id="@+id/fragment_poi_detail_info_link"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_l"
				android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
				android:paddingRight="@dimen/global_spacing_xs"
				android:paddingTop="@dimen/global_spacing_xxs"
				android:paddingBottom="@dimen/global_spacing_xxs"
				android:gravity="right"
				android:drawableRight="@drawable/link"
				android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"
				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true" />

			<TextView
				android:id="@+id/fragment_poi_detail_info_phone"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/global_spacing_l"
				android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
				android:paddingRight="@dimen/global_spacing_xs"
				android:paddingTop="@dimen/global_spacing_xxs"
				android:paddingBottom="@dimen/global_spacing_xxs"
				android:gravity="right"
				android:drawableRight="@drawable/phone"
				android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
				android:background="@drawable/selector_clickable_item_bg"
				android:textColor="@color/global_text_secondary"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:focusable="true" />

			<TextView
				android:id="@+id/fragment_poi_detail_info_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/selector_clickable_item_bg"
				android:clickable="true"
				android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
				android:drawableRight="@drawable/mail"
				android:ellipsize="end"
				android:focusable="true"
				android:gravity="right"
				android:maxLines="1"
				android:minHeight="@dimen/global_spacing_l"
				android:paddingBottom="@dimen/global_spacing_xxs"
				android:paddingRight="@dimen/fragment_poi_detail_info_item_padding"
				android:paddingLeft="@dimen/global_spacing_xs"
				android:paddingTop="@dimen/global_spacing_xxs"
				android:textColor="@color/global_text_secondary" />

		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>
